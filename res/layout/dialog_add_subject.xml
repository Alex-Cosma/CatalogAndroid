<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dip" >

        <TextView
            android:id="@+id/labelSName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/materie" />

        <EditText
            android:id="@+id/SName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/labelSName"
            android:hint="@string/introduceti_materia"
            android:text="" >
        </EditText>

        <TextView
            android:id="@+id/labelSTeacher"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/SName"
            android:text="@string/profesor" />

        <EditText
            android:id="@+id/STeacher"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/labelSTeacher"
            android:hint="@string/introduceti_numele_profesorului"
            android:text="" >
        </EditText>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/STeacher"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/addBT"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_ok" />

            <Button
                android:id="@+id/cancelBT"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/anuleaza" />
        </LinearLayout>
    </RelativeLayout>

</ScrollView>