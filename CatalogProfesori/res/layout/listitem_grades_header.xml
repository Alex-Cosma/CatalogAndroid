<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:background="@drawable/rounded_container_for_class"
    android:minHeight="900dp"
    android:minWidth="100dp"
    android:orientation="vertical"
    android:padding="3dp"
    android:weightSum="10" >

    <RelativeLayout
        android:id="@+id/layout_subjectAndSemester"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1.25"
        android:background="@drawable/border_bottom" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/materie"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#0A0A0A"
            android:textStyle="italic" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7.5"
        android:background="@drawable/border"
        android:baselineAligned="false"
        android:orientation="vertical"
        android:weightSum="10" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="8"
            android:background="@drawable/border_bottom" >

            <TextView
                android:id="@+id/tv_semester"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="2"
            android:background="@drawable/border_right" >
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_avarage"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1.25"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_right" >

            <TextView
                android:id="@+id/tv_avarage_generic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/avarage_grade"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>